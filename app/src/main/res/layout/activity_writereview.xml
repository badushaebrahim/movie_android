<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/cardprice"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="15dp"
    android:elevation="15dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/edittextdesigin"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView

            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/user"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <RatingBar
                    android:id="@+id/urat"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:rating="0.0"
                    android:layout_marginTop="5dp"
                    android:numStars="5"
                     />                   ">



                <EditText
                    android:id="@+id/urev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Review about this music"
                    android:textSize="15dp"
                    android:background="@drawable/edittextdesigin"
                    android:layout_marginTop="15dp"
                    android:textColor="#3C2E11">

                </EditText>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/sub"
    android:text="Submit"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:backgroundTint="#402424"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reviewrecycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="227dp"
            tools:layout_editor_absoluteY="294dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>