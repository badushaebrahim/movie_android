<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Admin.AddMovies">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="142dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="1dp"
        android:text="Add Movie to the Theater"
        android:textColor="#000"
        android:textSize="20dp"
       />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="29dp"
        app:srcCompat="@drawable/icon" />

    <EditText
        android:id="@+id/mname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittextdesigin"
        android:ems="10"
        android:hint="Movie Name"
        android:inputType="textPersonName"
    />
    <EditText
        android:id="@+id/director"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittextdesigin"
        android:ems="10"
        android:hint="Movie Director"
        android:inputType="textPersonName"
        />
    <EditText
        android:id="@+id/star"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittextdesigin"
        android:ems="10"
        android:hint="Movie Stars"
        android:inputType="textPersonName"
        />
    <EditText
        android:id="@+id/lang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittextdesigin"
        android:ems="10"
        android:textAllCaps="false"
        android:hint="Movie Language"
        android:inputType="textPersonName"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   android:layout_gravity="center"
        android:backgroundTint="#0355FA"
        android:text="upload" />
</LinearLayout>

</androidx.core.widget.NestedScrollView>